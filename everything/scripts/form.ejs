            <div class="section" id="calories-section">
                <h3 id="cal-title">Calorie Calculator</h3>
                <div>
                    <label for="units">Units of measurement: </label>
                    <select name="units" style="width:12%" id="units" class="custom-select">
                        <option value="metric">Metric System</option>
                        <option value="US">Imperial System</option>
                    </select>
                </div>

                <!--prepare questions-->
                <form id="calo-calc">
                    <table style="margin: auto auto;">
                        <tr>
                            <td><label for="weight">Weight(kg): </label></td>
                            <td><input step="0.1" id="weight" name="weight" type="number" placeholder="Weight..." min="0" required></td>
                        <tr>
                        
                        <tr>
                            <td><label id="label-height" for="height">Height(cm): </label></td>
                            <td><input step="0.1" id="height" name="height" type="number" placeholder="Height..." min="0" required></td>
                        </tr>

                        <tr>
                            <td><label for="age">Age: </label></td>
                            <td><input id="age" name="age" type="number" placeholder="Age..." min="12" required></td>
                        </tr>
                    </table>

                    <fieldset name="gender" id="gender-select">
                        <legend>Gender:</legend>
                        <div>
                            <input id="male" name="gender" type="radio" value="1" required>
                            <label for="male">Male</label>
                        </div>
                        <div>
                            <input id="female" name="gender" type="radio" value="0">
                            <label for="female">Female</label>
                        </div>
                    </fieldset>

                    <fieldset name="exercise" id="exercise-select">
                        <legend>Is your exercise intense:</legend>
                        <div>
                            <input id="intense" name="exercise" type="radio" value="1" required>
                            <label for="intense">Yes</label>
                        </div>
                        <div>
                            <input id="not-intense" name="exercise" type="radio" value="0">
                            <label for="not-intense">No</label>
                        </div>
                    </fieldset>

                    <label for="exercise-days">How many days do you exercise per week: </label>
                    <input id="exercise-days" name="exercise-days" type="number" placeholder="Amount of days..." min="0" max="7" required>
                    <br>
                    
                    <br>

                    <input type="submit" class="btn btn-success">
                </form>
                
                <br>
                
                <div id="results"> </div>
            </div>

